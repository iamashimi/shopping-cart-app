<!------ Include the above in your HEAD tag ---------->
<div class="row">
    <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
        <link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet"
            integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">
        <form action="/submitRatings" method="post" id="ratings-form">
            <div class="form-group" id="rating-ability-wrapper">
                <label class="control-label" for="rating">
                    <h1>Hey {{userName}}!</h1>
                    <p>Give us rate, would you please..</p>
                    <span class="field-label-info"></span>
                    <input type="hidden" id="selected_rating" name="selected_rating" value="" required="required">
                    <input type="hidden" id="userName" name="userName" value="{{userName}}" required="required">
                </label>
                <h2 class="bold rating-header" style="">
                    <span class="selected-rating">0</span><small> / 5</small>
                </h2>
                <button type="button" class="btnrating btn btn-default btn-lg" data-attr="1" id="rating-star-1">
                    <i class="fa fa-star" aria-hidden="true"></i>
                </button>
                <button type="button" class="btnrating btn btn-default btn-lg" data-attr="2" id="rating-star-2">
                    <i class="fa fa-star" aria-hidden="true"></i>
                </button>
                <button type="button" class="btnrating btn btn-default btn-lg" data-attr="3" id="rating-star-3">
                    <i class="fa fa-star" aria-hidden="true"></i>
                </button>
                <button type="button" class="btnrating btn btn-default btn-lg" data-attr="4" id="rating-star-4">
                    <i class="fa fa-star" aria-hidden="true"></i>
                </button>
                <button type="button" class="btnrating btn btn-default btn-lg" data-attr="5" id="rating-star-5">
                    <i class="fa fa-star" aria-hidden="true"></i>
                </button>

                <h1>Comments*</h1>
                <span class="field-label-info"></span>
                <div>
                    <div class="form-group">
                        <label for="comment"></label>
                        <textarea name="ratingComment" class="form-control" id="ratingComment" rows="3"></textarea>
                    </div>
                </div>

                <div >
                    <input type = "Submit" class="btn btn-success">
                    <a href="/" type="button" class="btn btn-danger">Skip</a>
                </div>

                <h3>Thank you for choosing us..</h3>
            </div>
        </form>
    </div>
</div>

<script type="text/javascript" src="javascripts/ratings.js"></script>
